@model Movie_Application.ViewModel.MovieCommentVM

<style>
    .form{
        display:flex;
        align-items:center;
        /*background-color:gray;*/
        width:50%;
        margin-left:20%;
    }
    .text-area{
        width:400px;
    }
    .button{
        position:relative;
        top:-3px;
    }
</style>
<div class="row">
    <div class="col-md-4 form">
        <form asp-controller="Comment" asp-action="AddComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           @* <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <input asp-for="MovieId" class="form-control" />
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>*@
           
            <input type ="hidden" asp-for="@Model.CommentVM.MovieId" value="@Model.Movie.Id"/>
           
            <div class="text-area" style="display: inline-block;">
                <div class="form-group" style="display: inline; height:1.1rem;">
                   @* <label asp-for="@Model.CommentVM.Content" class="control-label"></label>*@
                    <input asp-for="@Model.CommentVM.Content" class="form-control" placeholder="Write Comment" />
                    <span asp-validation-for="@Model.CommentVM.Content" class="text-danger"></span>
                </div>
            </div>
            <div class ="button" style="display: inline-block; margin-left:-5px;">
                <div class="form-group" style="display: inline;">
                    <input type="submit" value="Comment" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>



